{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"composite": true
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
